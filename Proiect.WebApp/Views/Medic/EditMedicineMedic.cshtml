@model TreatmentMedicine


<div class="row">
    <div class="col-md-4 p-4">
        <h3>Editare medicament</h3>
        <form asp-action="EditMedicineMedic" asp-controller="Medic">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Medicine.Id" type="hidden" />
            <input asp-for="Treatment.Id" type="hidden" />
            <input asp-for="Treatment.IdMedicine" type="hidden" />
            <input asp-for="Treatment.IdPatient" type="hidden" />
            <div class="form-group">
                <label asp-for="Medicine.Name" class="control-label">Denumire medicament</label>
                <input asp-for="Medicine.Name" class="form-control" />
                <span asp-validation-for="Medicine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.AdministrationMethod" class="control-label">Metodă de administrare</label>
                <input asp-for="Medicine.AdministrationMethod" class="form-control" />
                <span asp-validation-for="Medicine.AdministrationMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Treatment.NumberOfDays" class="control-label">Zile tratament</label>
                <input asp-for="Treatment.NumberOfDays" class="form-control" type="number"/>
                <span asp-validation-for="Treatment.NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Treatment.Observations" class="control-label">Observații</label>
                <input asp-for="Treatment.Observations" class="form-control" />
                <span asp-validation-for="Treatment.Observations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editează" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>