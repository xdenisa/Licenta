@model MedicineViewModel

<partial name="_PacientPartial" model="@Model.Patient.Id" />

<div class="row">
    <div class="col-md-4 p-4">
        <h3>Înregistrare medicament</h3>
        <form asp-action="AddMedicine" asp-controller="Patient" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Patient.Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Denumire medicament</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administration" class="control-label">Metodă de administrare</label>
                <input asp-for="Administration" class="form-control" />
                <span asp-validation-for="Administration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label">Zile tratament</label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observations" class="control-label">Observații</label>
                <input asp-for="Observations" class="form-control" />
                <span asp-validation-for="Observations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adaugă" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>